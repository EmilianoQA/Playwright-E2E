{
  "name": "playwright-e2e-tests",
  "version": "1.0.0",
  "description": "Automatizaci√≥n E2E con Playwright y Allure",
  "scripts": {
    "start:backend": "cd redux-athena-bank/backend && npm install && npm run dev",
    "start:frontend": "cd redux-athena-bank/frontend && npm install && npm run dev",
    "start:app": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "wait-for-app": "npx wait-on http://localhost:3000 http://localhost:6007 -t 60000",

    "test": "source .venv/bin/activate && pytest -p allure_pytest --alluredir=allure-results --clean-alluredir",
    "test:all": "source .venv/bin/activate && pytest -v -p allure_pytest --alluredir=allure-results --clean-alluredir",
    "test:login": "source .venv/bin/activate && pytest Tests/test_login.py -v -p allure_pytest --alluredir=allure-results --clean-alluredir",
    "test:login_ddt": "source .venv/bin/activate && pytest Tests/test_login_ddt.py -v -p allure_pytest --alluredir=allure-results --clean-alluredir",
    
    "test:registro": "source .venv/bin/activate && pytest Tests/test_registro.py -v -p allure_pytest --alluredir=allure-results --clean-alluredir",
    "test:cuentas": "source .venv/bin/activate && pytest Tests/test_cuentas.py -v -p allure_pytest --alluredir=allure-results --clean-alluredir",
    "test:navegacion": "source .venv/bin/activate && pytest Tests/test_navegacion.py -v -p allure_pytest --alluredir=allure-results --clean-alluredir",
    "test:transferencias": "source .venv/bin/activate && pytest Tests/test_transferencias.py -v -p allure_pytest --alluredir=allure-results --clean-alluredir",
  
    "report": "allure serve allure-results",
    "test:report": "npm run test:all && npm run report",
    "trace": "playwright show-trace trace.zip",
    "e2e:full": "npm run start:app && npm run wait-for-app && npm run test:all",
    "e2e:ci": "concurrently --kill-others --success first \"npm run start:app\" \"npm run wait-for-app && npm run test:all\""
  },
  "keywords": ["playwright", "testing", "e2e", "allure"],
  "author": "Emiliano",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "wait-on": "^7.0.1"
  }
}
